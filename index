    <script>
        // Navigation
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');
            event.target.classList.add('active');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Tabs
        function showTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(tabId).classList.add('active');
            event.target.classList.add('active');
        }

        // Chart.js RTL and font
        Chart.defaults.font.family = "'IBM Plex Sans Arabic', sans-serif";

        // Simple color palette
        const colors = {
            green: '#27ae60',
            red: '#e74c3c',
            blue: '#3498db',
            yellow: '#f1c40f',
            primary: '#1b4144',
            gray: '#95a5a6'
        };

        // Decade Chart - Trade Balance
        new Chart(document.getElementById('decadeChart').getContext('2d'), {
            type: 'bar',
            data: {
                labels: ['2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024', '2025*'],
                datasets: [{
                    label: 'الصادرات',
                    data: [3.17, 3.09, 4.10, 3.48, 3.73, 3.80, 5.03, 4.36, 3.63, 3.13, 2.38],
                    backgroundColor: colors.green,
                    borderRadius: 4
                }, {
                    label: 'الواردات',
                    data: [9.51, 8.31, 9.13, 7.85, 9.29, 9.84, 9.89, 11.09, 7.50, 4.91, 5.70],
                    backgroundColor: colors.red,
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: {
                        callbacks: {
                            label: ctx => ctx.dataset.label + ': ' + ctx.parsed.y + ' مليار $'
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'مليار دولار' }
                    }
                }
            }
        });

        // Volume Chart
        new Chart(document.getElementById('volumeChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: ['2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024', '2025*'],
                datasets: [{
                    label: 'حجم التجارة الكلي',
                    data: [12.68, 11.40, 13.23, 11.33, 13.02, 13.64, 14.92, 15.45, 11.13, 8.04, 8.08],
                    borderColor: colors.primary,
                    backgroundColor: 'rgba(27, 65, 68, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: ctx => 'حجم التجارة: ' + ctx.parsed.y + ' مليار $'
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'مليار دولار' }
                    }
                }
            }
        });

        // Exports Pie Chart
        new Chart(document.getElementById('exportsPieChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: ['الذهب', 'الماشية', 'السمسم', 'الصمغ العربي', 'حب البطيخ', 'القطن', 'أخرى'],
                datasets: [{
                    data: [1050, 289, 181, 67, 46, 45, 108],
